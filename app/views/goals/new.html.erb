<!-- 期間（開始日・目的日） -->
<%= form_with model: @goal, url: goals_path, method: :post do |f| %>
  <div class="mb-2">
    <% if @goal.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @goal.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class:"form-control", placeholder:"例：TOEIC 700" %>
  </div>
  <div class="row g-2">
    <div class="col">
      <%= f.label :start_date, "開始日" %>
      <%= f.date_field :start_date, class:"form-control" %>
    </div>
  </div>

  <!-- 説明 -->
  <div class="mb-3 mt-2">
    <%= f.label :description, "説明" %>
    <%= f.text_area :description, rows:3, class:"form-control", placeholder:"目標の背景や計画をメモ" %>
  </div>
  <%= f.submit "作成" %>
<% end %>