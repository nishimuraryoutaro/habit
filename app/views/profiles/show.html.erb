<div class="container my-4">
  <div class="d-flex align-items-center gap-3 mb-3">
    <span class="avatar d-inline-grid place-items-center rounded-circle bg-dark text-white fw-bold" style="width:34px;height:34px;display:inline-grid;place-items:center;">
      <%= @user.email.first&.upcase || "U" %>
    </span>
    <div>
      <div class="h4 mb-1 fw-bold"><%= @user.email %></div>
    </div>
  </div>
    <div class="card shadow-sm">
      <%= link_to "GOAL作成", new_goal_path, class:"btn btn-success btn-sm" %>
    <div class="card-header bg-white">あなたの目標一覧</div>
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>期間</th>
            <th>説明</th>
            <th class="text-end">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @goals.each do |g| %>
            <tr>
              <td class="fw-semibold"><%= g.title %></td>
              <td class="text-muted xsmall">
                <%= g.start_date || "—" %> 〜 <%= g.target_date || "—" %>
              </td>
              <td class="text-truncate" style="max-width:320px;"><%= g.description %></td>
              <td class="text-end">
                <%= link_to "HOMEで表示",root_path(g,goal_id: g.id), class:"btn btn-outline-primary btn-sm" %>
                <%= link_to "Goal詳細", goal_path(g, goal_id: g.id), class:"btn btn-outline-secondary btn-sm ms-1" %>
                <%= button_to "削除", goal_path(g),method: :delete,form: { data: { turbo_confirm: "本当に削除しますか？（タスクも消えます）" } },class: "btn btn-outline-danger btn-sm ms-1" %>
              </td>
            </tr>
          <% end %>
          <% if @goals.empty? %>
            <tr>
              <td colspan="4" class="text-muted small p-3">
                まだ目標がありません。上のフォームから作成してください。
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>