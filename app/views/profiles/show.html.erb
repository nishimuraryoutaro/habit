<div class="container">
  <div class="account d-flex mb-3 mt-5 align-items-center gap-3">
    <span class="avatar d-inline-grid place-items-center rounded-circle bg-dark text-white fw-bold" style="width:34px;height:34px;display:inline-grid;place-items:center;">
      <%= @user.email.first&.upcase || "U" %>
    </span>
    <div>
      <div class="h4 mb-1 fw-bold"><%= @user.email %></div>
    </div>
  </div>
  <div class="btn-area">
    <%= link_to "GOAL作成", new_goal_path, class: "g-create btn btn-success btn-sm  btn-lg d-block d-lg-inline-block w-100 w-lg-auto mt-4 mb-5" %>
  </div>
    <div class="card shadow-sm mb-4">
    <div class="card-header">あなたの目標一覧</div>
    <div class="card-body bg-white">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>期間</th>
            <th>説明</th>
            <th class="text-end">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @goals.each do |g| %>
            <tr id="goal-<%= g.id %>">
              <td class="fw-semibold align-middle"><%= g.title %></td>
              <td class="text-muted align-middle xsmall">
                <%= g.start_date || "—" %> 〜 <%= g.target_date || "—" %>
              </td>
              <td class="text-truncate align-middle" style="max-width:320px;"><%= g.description.presence || "—" %></td>
              <td class="text-end align-middle">
                <%= link_to "HOMEで表示",root_path(goal_id: g.id), class:"ob btn btn-outline-primary btn-sm" %>
                <%= button_to "削除", goal_path(g),method: :delete,form: { data: { turbo_confirm: "本当に削除しますか？（タスクも消えます）" } },class: "ob btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
          <% if @goals.empty? %>
            <tr>
              <td colspan="4" class="text-muted small p-3">
                まだ目標がありません。上のフォームから作成してください。
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>